<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_small"
        android:background="@color/coral">

        <ImageView
            android:id="@+id/posterImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/movie_overview_scrollbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_release_date" />

        <ScrollView
            android:id="@+id/movie_overview_scrollbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            style="@style/SecondFragmentTextView"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_percent=".5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/posterImage"
            app:layout_constraintTop_toBottomOf="@id/movie_release_date">

            <TextView
                android:id="@+id/movie_overview"
                android:gravity="center"
                android:textAppearance="@style/BaseText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </ScrollView>

        <TextView
            style="@style/SecondFragmentTextView"
            android:id="@+id/movie_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/middle_guideline"
            app:layout_constraintBottom_toTopOf="@id/movie_vote_average" />

        <TextView
            android:id="@+id/movie_original_language"
            style="@style/SecondFragmentTextView"
            app:layout_constraintBottom_toBottomOf="@id/movie_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/movie_title"
            app:layout_constraintLeft_toRightOf="@id/middle_guideline" />

        <TextView
            style="@style/SecondFragmentTextView"
            android:id="@+id/movie_vote_average"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/middle_guideline"
            app:layout_constraintTop_toBottomOf="@id/movie_title"
            app:layout_constraintBottom_toTopOf="@id/movie_vote_count" />

        <TextView
            android:id="@+id/movie_popularity"
            style="@style/SecondFragmentTextView"
            app:layout_constraintLeft_toRightOf="@+id/middle_guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/movie_vote_average"
            app:layout_constraintTop_toTopOf="@id/movie_vote_average" />

        <TextView
            android:id="@+id/movie_vote_count"
            style="@style/SecondFragmentTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/middle_guideline"
            app:layout_constraintTop_toBottomOf="@id/movie_vote_average" />

        <TextView
            android:id="@+id/movie_release_date"
            style="@style/SecondFragmentTextView"
            app:layout_constraintLeft_toRightOf="@id/middle_guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/movie_vote_count"
            app:layout_constraintBottom_toBottomOf="@id/movie_vote_count" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middle_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>